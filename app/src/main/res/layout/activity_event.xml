<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.plus.calendar.EventActivity">

    <Button
        android:text="Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <AutoCompleteTextView
            android:hint="Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/autoCompleteTextView_title" />

        <CheckBox
            android:text="All Day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox2"
            android:textSize="18sp"
            android:layout_weight="0.03" />

        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.04"
        android:gravity="center_vertical">

        <TextView
            android:text="Start:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_start"
            android:layout_weight="0.1"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_startDate"
            android:clickable="true"
            android:text="startDate"
            android:textSize="18sp"
            android:layout_weight="0.2"/>

        <TextView
            android:layout_height="wrap_content"
            android:id="@+id/textView_startTime"
            android:clickable="true"
            android:text="startTime"
            android:maxLines="1"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_weight="0.1"
            android:gravity="end" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:gravity="center_vertical">

            <TextView
                android:text="End: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_end"
                android:layout_weight="0.1"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_endDate"
                android:clickable="true"
                android:text="endDate "
                android:textSize="18sp"
                android:layout_weight="0.2"/>

            <TextView
                android:layout_height="wrap_content"
                android:id="@+id/textView_endTime"
                android:clickable="true"
                android:text=" endTime"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:layout_weight="0.1"
                android:gravity="end" />

        </LinearLayout>

        <AutoCompleteTextView
            android:hint="Location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/autoCompleteTextView_loc" />


    </LinearLayout>
</RelativeLayout>
